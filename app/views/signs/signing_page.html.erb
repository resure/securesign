<% title "Signing page #{@page.title}" %>

<%= form_tag do |f| %>
	Select certificate for signing:<br />
	<%= select_tag :certificate_id, options_for_select(@user_certificates), style: 'width:357px' %>
	<br />
	Enter key password: <%= password_field_tag :key_password %>
	<%= submit_tag 'Sign', class: 'primary button' %>
<% end %>

<br />
<%= link_to 'Back to the page', @page %>
