<% title 'Editing page' %>

<%= form_for(@page) do |f| %>
  <%= error_messages_for @page %>

  <div class="field text-title">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field text-field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :file %><br />
    <%= f.file_field :file %>
  </div>
  <div class="actions">
    <%= f.submit 'Update page', class: 'primary button' %>
  </div>
<% end %>

<br />

<%= link_to 'Show', @page %> |
<%= link_to 'Back', pages_path %>
